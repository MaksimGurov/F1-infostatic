<div class="container">

  <table class="table table-dark table-striped border-primary">
    <thead>
    <tr>
      <th>Position </th>
      <th>Team </th>
      <th>Points </th>
      <th>Status</th>
      <th>Lap Time</th>
    </tr>
    </thead>

    <tbody>

    <% @race_results.each do |result| %>

      <tr>
        <td><%= result[:position]%></td>
        <td><%= result[:driverFirstName]%></td>
        <td><%= result[:driverLastName]%></td>
        <td><%= result[:status]%></td>
        <% if result[:time] != nil %>
          <td><%= result[:time]['time'] %></td>
        <% end %>
      </tr>

    <% end %>

    </tbody>
    <caption>Team Standings</caption>
  </table>

</div>